pipeline {
    agent any
    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/claris0911/SSD_Lab.git', credentialsId: '8ecd7d43-cbab-4a10-9ee8-1c31ad258a71' // Replace 'your-credentials-id' with the actual ID from Jenkins
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t my-webapp .'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'docker run --rm my-webapp pytest tests/'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
